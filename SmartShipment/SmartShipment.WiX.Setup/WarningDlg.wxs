<?xml version="1.0" encoding="UTF-8"?>
<Wix xmlns="http://schemas.microsoft.com/wix/2006/wi">
  <Fragment>
    <UI>
      <Dialog Id="WarningDlg" Height="30" Width="250" Title="Warning">
        <Control Id="WarningText"
                  Type="text"
                  X="10"
                  Y="10"
                  Width="200"
                  Height="17"
                  Text="Settings must be in a default state!"/>
          <Control Id="OkButton"
                   Type="PushButton"
                   Text="OK"
                   Height="17"
                   Width="56"
                   X="180"
                   Y="243"
                   Cancel="no"> 
            <Publish Event="EndDialog" Value="Exit" />
          </Control> 
      </Dialog>
    </UI>
  </Fragment>
</Wix>
